
@{
    ViewBag.Title = "Details of Achievable";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row c-box--medium">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">@Html.ActionLink("Home", "Index", "Home")</li>
            <li class="breadcrumb-item">@Html.ActionLink("Achievables", "Index", "Achievables")</li>
            <li class="breadcrumb-item active" aria-current="page">Details</li>
        </ol>
    </nav>
</div>

<div class="row">
    <h2>@ViewBag.Title</h2>
</div>

<div class="c-box--medium">
    <div class="form-group row">
        <div class="col-md-2 u-no-gutter"><strong>Category</strong></div>
        <div class="col-md-2">Hard Skills</div>
    </div>
    <div class="form-group row">
        <div class="col-md-2 u-no-gutter"><strong>Type</strong></div>
        <div class="col-md-2">Programming Language</div>
    </div>
    <div class="form-group row">
        <div class="col-md-2 u-no-gutter"><strong>Achievable</strong></div>
        <div class="col-md-2">C#</div>
    </div>
    <div class="form-group row">
        <div class="col-md-2 u-no-gutter"><strong>Description</strong></div>
        <div class="col-md-2">Description</div>
    </div>
    <div class="col-md-5 c-box--medium">
        <div class="btn-group pull-right">
            @Html.ActionLink("Back", "Index", "Achievables", null, new { @class = "btn btn-sm btn-default" })
            @Html.ActionLink("Edit Achievable", "Edit", "Achievables", null, new { @class = "btn btn-sm btn-primary" })
        </div>
    </div>
</div>
<div class="clearfix"></div>
<div class="row">
    <h4>Colleagues having this Achievement</h4>
    <table class="table table-striped table-condensed table-hover compact">
        <thead>
            <tr>
                <th>Name</th>
                <th>Contact</th>
                <th>Last Contact</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Max Mustermann</td>
                <td>max.mustermann@techtalk.at</td>
                <td>2018.05</td>
            </tr>
            <tr>
                <td>Sarah Huber</td>
                <td>sarah.huber@techtalk.at</td>
                <td>2011.01</td>
            </tr>
        </tbody>
    </table>
</div>
@section scripts {
    <script>
        $(document).ready(function () {
            $(".table").DataTable({
                paging: false,
                info: false
            });
        });
    </script>
}