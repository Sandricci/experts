
@{
    ViewBag.Title = "Add Achievement";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row c-box--medium">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">@Html.ActionLink("Home", "Index", "Home")</li>
            <li class="breadcrumb-item">@Html.ActionLink("My Achievements", "Index", "Achievement")</li>
            <li class="breadcrumb-item active" aria-current="page">Add Achievement</li>
        </ol>
    </nav>
</div>

<div class="row">
    <h2>@ViewBag.Title</h2>
</div>

<div class="c-box--medium">
    <form>
        <div class="form-group row">
            <label for="achievementSelect" class="col-md-2 col-form-label u-no-gutter">Achievable</label>
            <div class="col-md-3">
                <select class="add-achievement-select input-sm" style="width: 100%" name="state">
                    <option></option>
                </select>
            </div>
            <div class="col-md-3">
                @Html.ActionLink("My Achievement is not defined", "Create", "Achievables", null, new { @class = "btn btn-sm btn-primary" })
            </div>
        </div>
        <div class="form-group row">
            <label for="commentSelect" class="col-md-2 col-form-label u-no-gutter">Comment</label>
            <div class="col-md-3">
                <textarea class="form-control input-sm" id="commentSelect" rows="3" placeholder="enter some remarks here"></textarea>
            </div>
        </div>
        <div class="form-group row">
            <label for="lcontactSelect" class="col-md-2 col-form-label u-no-gutter">Last Contact</label>
            <div class="col-md-3">
                <div class="input-group">
                    <input class="form-control input-sm" id="lcontactSelect" placeholder="2018.1" />
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button" onclick="global.achievements.add.setLastContact()">Today</button>
                    </span>
                </div>
            </div>
        </div>
    </form>
    <div class="col-md-5 c-box--medium">
        <div class="btn-group pull-right">
            @Html.ActionLink("Back", "Index", "Achievement", null, new { @class = "btn btn-sm btn-default" })
            @Html.ActionLink("Add Achievement", "Index", "Achievement", new { @class = "btn btn-sm btn-primary" })
        </div>
    </div>
</div>
@section scripts {
    <script> window.onload = global.achievements.add.init() </script>
}
