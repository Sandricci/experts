
@{
    ViewBag.Title = "Add Achievement";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row c-box--medium">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">@Html.ActionLink("Home", "Index", "Home")</li>
            <li class="breadcrumb-item">@Html.ActionLink("My Achievements", "Index", "Achievement")</li>
            <li class="breadcrumb-item active" aria-current="page">Add Achievement</li>
        </ol>
    </nav>
</div>

<div class="row">
    <h2>@ViewBag.Title</h2>
</div>

<div class="c-box--medium">
    <div class="row">
        <div class="col-sm-7 col-md-5 col-lg-4">
            <form class="form" autocomplete="off">
                <div class="form-group row">
                    <label for="achievementSelect" class="col-md-2 col-form-label u-no-gutter">Achievable</label>
                    <div class="col-md-9">
                        <select class="add-achievement-select" id="achievementSelect" name="achievementSelect" style="width: 100%" autocomplete="off">
                            <option></option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="commentText" class="col-md-2 col-form-label u-no-gutter">Comment</label>
                    <div class="col-md-9">
                        <textarea class="form-control input-sm" id="commentText" name="commentText" rows="3" placeholder="enter some remarks here"></textarea>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="lcontactText" class="col-md-2 col-form-label u-no-gutter">Last Contact</label>
                    <div class="col-md-9">
                        <div class="input-group">
                            <input class="form-control input-sm" id="lcontactText" name="lcontextText" placeholder="2018.1" />
                            <span class="input-group-btn">
                                <button class="btn btn-default btn-sm" type="button" onclick="global.achievements.add.setLastContact()">Today</button>
                            </span>
                        </div>
                    </div>
                </div>
            </form>
            <div class="c-box--medium">
                <div class="btn-group pull-right">
                    @Html.ActionLink("Back", "Index", "Achievement", null, new { @class = "btn btn-sm btn-default" })
                    @Html.ActionLink("Add Achievement", "Index", "Achievement", new { @class = "btn btn-sm btn-primary" })
                </div>
            </div>
        </div>
        <div class="col-sm-5 col-md-5 col-lg-3">
            <div class="js-achievable-not-found" style="display:none">
                <div class="col-md-3">
                    @Html.ActionLink("My Achievement is not defined", "Create", "Achievables", null, new { @class = "btn btn-sm btn-primary" })
                </div>
            </div>
            <div class="js-achievable-description" style="display:none">
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th id="js-achievable-desc-title">?</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td id="js-achievable-desc-text">
                                Lorem ipsum dolor sit amet, consetetur sadipscing elitr, 
                                sed diam nonumy eirmod tempor invidunt ut labore et dolore 
                                magna aliquyam erat, sed diam voluptua. 
                                At vero eos et accusam et justo duo dolores et ea rebum. 
                                Stet clita kasd gubergren,
                            </td>
                        </tr>
                    </tbody>
                </table>
             </div>
        </div>
    </div>
</div>
@section scripts {
    <script> window.onload = global.achievements.add.init() </script>
}
