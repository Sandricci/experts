
@{
    ViewBag.Title = "Details of Type";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row c-box--medium">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">@Html.ActionLink("Home", "Index", "Home")</li>
            <li class="breadcrumb-item">@Html.ActionLink("Types", "Index", "Achievables")</li>
            <li class="breadcrumb-item active" aria-current="page">Details</li>
        </ol>
    </nav>
</div>


<div class="row">
    <h2>@ViewBag.Title</h2>
</div>

<div class="c-box--medium">
    <div class="form-group row">
        <div class="col-md-2 u-no-gutter"><strong>Type</strong></div>
        <div class="col-md-2">Programming Language</div>
    </div>
    <div class="form-group row">
        <div class="col-md-2 u-no-gutter"><strong>Category</strong></div>
        <div class="col-md-2">Hard Skills</div>
    </div>
    <div class="form-group row">
        <div class="col-md-2 u-no-gutter"><strong>Description</strong></div>
        <div class="col-md-2">Description</div>
    </div>
    <div class="row c-box--medium">
        @Html.ActionLink("Edit Type", "Edit", "Types", null, new { @class = "btn btn-sm btn-primary" })
    </div>
</div>

<div class="row">
    <h4>Assigned Achievables</h4>
    <table class="table table-striped table-hover table-condensed" style="width: 33%">
        <thead>
            <tr>
                <th>Achievable</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>C#</td>
            </tr>
            <tr>
                <td>F#</td>
            </tr>
        </tbody>
    </table>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                paging: false,
                info: false
            })
        });
    </script>
}